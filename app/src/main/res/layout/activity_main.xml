<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewQ1"
            android:layout_width="162dp"
            android:layout_height="99dp"
            android:text="Question 1                          This world has the same pronounciation even after removing 4 letters from it" />

        <Button
            android:id="@+id/buttonRevealQ1"
            android:layout_width="249dp"
            android:layout_height="48dp"
            android:text="REVEAL" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewQ2"
            android:layout_width="18dp"
            android:layout_height="83dp"
            android:layout_weight="1"
            android:text="Question 2                            How do you make 1 disappear?" />

        <Button
            android:id="@+id/buttonRevealQ2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="REVEAL" />
    </LinearLayout>

</LinearLayout>